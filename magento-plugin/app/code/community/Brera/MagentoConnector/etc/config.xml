<?xml version="1.0"?>
<config>
    <modules>
        <Brera_MagentoConnector>
            <version>0.0.6</version>
        </Brera_MagentoConnector>
    </modules>
    <global>
        <blocks>
            <brera_magentoconnector>
                <class>Brera_MagentoConnector_Block</class>
            </brera_magentoconnector>
        </blocks>
        <models>
            <brera_magentoconnector>
                <class>Brera_MagentoConnector_Model</class>
                <resourceModel>brera_magentoconnector_resource</resourceModel>
            </brera_magentoconnector>
            <brera_magentoconnector_resource>
                <class>Brera_MagentoConnector_Model_Resource</class>
            </brera_magentoconnector_resource>
        </models>
        <helpers>
            <brera_magentoconnector>
                <class>Brera_MagentoConnector_Helper</class>
            </brera_magentoconnector>
        </helpers>
        <resources>
            <brera_magentoconnector_setup>
                <setup>
                    <module>Brera_MagentoConnector</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </brera_magentoconnector_setup>
        </resources>
        <events>
            <catalog_category_save_after>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogCategorySaveAfter</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_category_save_after>
            <catalog_category_delete_after>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogCategoryDeleteAfter</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_category_delete_after>
            <catalog_category_tree_move_after>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogCategoryTreeMoveAfter</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_category_tree_move_after>
            <catalog_product_save_after>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogProductSaveAfter</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_product_save_after>
            <catalog_product_delete_after>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogProductDeleteAfter</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_product_delete_after>
            <catalog_product_attribute_update_after>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogProductAttributeUpdateAfter</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_product_attribute_update_after>
            <catalog_controller_product_delete>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>catalogControllerProductDelete</method>
                    </brera_magentoconnector>
                </observers>
            </catalog_controller_product_delete>
            <cataloginventory_stock_item_save_commit_after>
                <observers>
                    <brera_magentoconnector>
                        <class>brera_magentoconnector/observer</class>
                        <method>cataloginventoryStockItemSaveCommitAfter</method>
                    </brera_magentoconnector>
                </observers>
            </cataloginventory_stock_item_save_commit_after>
            <sales_model_service_quote_submit_before>
                <observers>
                    <brera_magentoconnector>
                        <class>brera_magentoconnector/observer</class>
                        <method>salesModelServiceQuoteSubmitBefore</method>
                    </brera_magentoconnector>
                </observers>
            </sales_model_service_quote_submit_before>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <brera_magentoconnector>
                        <class>brera_magentoconnector/observer</class>
                        <method>salesModelServiceQuoteSubmitFailure</method>
                    </brera_magentoconnector>
                </observers>
            </sales_model_service_quote_submit_failure>
            <sales_order_item_cancel>
                <observers>
                    <brera_magentoconnector>
                        <class>brera_magentoconnector/observer</class>
                        <method>salesOrderItemCancel</method>
                    </brera_magentoconnector>
                </observers>
            </sales_order_item_cancel>
            <sales_order_creditmemo_save_after>
                <observers>
                    <brera_magentoconnector>
                        <class>brera_magentoconnector/observer</class>
                        <method>salesOrderCreditmemoSaveAfter</method>
                    </brera_magentoconnector>
                </observers>
            </sales_order_creditmemo_save_after>
            <cobby_after_product_import>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>cobbyAfterProductImport</method>
                    </brera_magentoconnector>
                </observers>
            </cobby_after_product_import>
            <magmi_stock_was_updated>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>magmiStockWasUpdated</method>
                    </brera_magentoconnector>
                </observers>
            </magmi_stock_was_updated>
            <magmi_products_were_updated>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>magmiProductsWereUpdated</method>
                    </brera_magentoconnector>
                </observers>
            </magmi_products_were_updated>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <brera_magentoconnector>
                    <file>brera_magentoconnector.xml</file>
                </brera_magentoconnector>
            </updates>
        </layout>
        <routers>
            <brera_magentoconnector>
                <use>standard</use>
                <args>
                    <module>Brera_MagentoConnector</module>
                    <frontName>cart</frontName>
                </args>
            </brera_magentoconnector>
        </routers>
        <events>
            <controller_action_predispatch_checkout_cart_add>
                <observers>
                    <brera_magentoconnector>
                        <type>singleton</type>
                        <class>brera_magentoconnector/observer</class>
                        <method>controllerActionPredispatchCheckoutCartAdd</method>
                    </brera_magentoconnector>
                </observers>
            </controller_action_predispatch_checkout_cart_add>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <magentoconnector after="Mage_Adminhtml">Brera_MagentoConnector_Adminhtml</magentoconnector>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <brera>
            <magentoconnector>
                <local_path_for_product_export><![CDATA[file:///vagrant/]]></local_path_for_product_export>
                <local_filename_template><![CDATA[magento-%s.xml]]></local_filename_template>
                <stock_xml_target><![CDATA[file:///vagrant/stock.xml]]></stock_xml_target>
                <api_url><![CDATA[http://brera-magento-connector.dev/brera/api/]]></api_url>
                <cms_special_blocks>
                    <top.menu/>
                </cms_special_blocks>
            </magentoconnector>
        </brera>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Brera_MagentoConnector/>
            </modules>
        </suite>
    </phpunit>
</config>
